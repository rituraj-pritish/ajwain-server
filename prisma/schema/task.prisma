model Task {
  id    Int   @id   @default(autoincrement())
  title   String    
  description   String?
  createdAt   DateTime    @default(now())
  createdByUserId   Int
  date    DateTime?
  memberIds   String?
  status    TaskStatus    @default(PENDING)
  workspaceId   Int
  workspace   Workspace   @relation(fields: [workspaceId], references: [id])
}